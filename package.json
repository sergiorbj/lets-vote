{
  "name": "lets-vote",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "pnpm --filter backend dev",
    "dev:web": "pnpm --filter web dev",
    "dev:mobile": "pnpm --filter mobile start",
    "android:mobile": "pnpm --filter mobile android",
    "ios:mobile": "pnpm --filter mobile ios",
    "build:all": "pnpm -r build",
    "test:all": "pnpm -r test",
    "test:backend": "pnpm --filter @lets-vote/backend test",
    "test:web": "pnpm --filter web test:e2e",
    "test:frontend": "pnpm --filter web test:e2e",
    "test:e2e": "pnpm --filter web test:e2e",
    "test:e2e:ui": "pnpm --filter web test:e2e:ui",
    "test:e2e:headed": "pnpm --filter web test:e2e:headed",
    "test:e2e:debug": "pnpm --filter web test:e2e:debug"
  },
  "devDependencies": {
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
